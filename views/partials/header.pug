header.header
  .header__column
    a(href=routes.home)
      i.fab.fa-youtube
  .header__column
    form(action=routes.search, method="GET")
      input(type="text", placeholder="검색어를 입력하세요", name="term")
  .header__column
    ul
      if !user.isAuthenticated
        li
          a(href=routes.join) Join
        li
          a(href=routes.login) LogIn
      else
        li
          a(href=`/videos${routes.upload}`) Upload Video
        li
          a(href=routes.userDetail(user.id)) Profile
        li
          a(href=routes.logout) Logout